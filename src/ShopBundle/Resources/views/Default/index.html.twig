<script src="https://rawgit.com/dwmkerr/angular-modal-service/master/dst/angular-modal-service.js"></script>
    

        <!--routing partials-->
        <script type="text/ng-template" id="home.html">
            {% include 'ShopBundle:Default:home.html.twig'%}
    	</script>
        <script type="text/ng-template" id="shop.html">
            {% include 'ShopBundle:Default:shop.html.twig'%}
        </script>
        <script type="text/ng-template" id="product.html">
                   
        {% include 'ShopBundle:Default:product.html.twig'%}
        </script>
        <script type="text/ng-template" id="cart.html">
            {% include 'ShopBundle:Default:cart.html.twig'%}
        </script>
        <script type="text/ng-template" id="checkout.html">
            {% include 'ShopBundle:Default:checkout.html.twig'%}
        </script>
        <script type="text/ng-template" id="category.html">
            {% include 'ShopBundle:Default:categories.html.twig'%}
        </script>
        <script type="text/ng-template" id="template/ngCart/summary.html">
    
           [[ ngCart.getTotalItems() ]]
            <ng-pluralize count="ngCart.getTotalItems()" when="{1: 'item', 'other':'items'}"></ng-pluralize>
            [[ngCart.totalCost() | currency ]]
        
</script>

{% endblock %}

    