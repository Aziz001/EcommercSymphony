    <script src="{{asset('bundles/shop/js/angular.min.js')}}"></script>
    <script src="{{asset('bundles/shop/js/angular-route.js')}}"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="{{asset('bundles/shop/js/angularControllers/app.js')}}"></script>
    <script src="{{asset('bundles/shop/js/angularControllers/ngCart.js')}}"></script>
    <script src="{{asset('bundles/shop/js/angularControllers/autocompletion.js')}}"></script>
    <script src="{{asset('bundles/shop/js/angularControllers/service.js')}}"></script>
        <script src="{{asset('bundles/shop/js/angularControllers/cache.js')}}"></script>

        <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
     
